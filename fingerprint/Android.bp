soong_config_module_type {
    name: "fingerprint_ext_defaults",
    module_type: "cc_defaults",
    config_namespace: "xiaomiVars",
    bool_variables: ["uses_fod_extension"],
    properties: [
        "cflags",
        "shared_libs",
        "vintf_fragments",
    ],
}

fingerprint_ext_defaults {
    name: "fingerprint_ext",
    soong_config_variables: {
        uses_fod_extension: {
            cflags: ["-DUSES_FOD_EXTENSION"],
            shared_libs: [
                "vendor.xiaomi.hardware.fingerprintextension@1.0",
            ],
            vintf_fragments: ["vendor.xiaomi.hardware.fingerprintextension@1.0.xml"],
        },
    },
}

cc_binary {
    name: "android.hardware.biometrics.fingerprint@2.1-service.xiaomi_sm6150",
    defaults: [
        "hidl_defaults",
        "fingerprint_ext",
    ],
    relative_install_path: "hw",
    init_rc: ["android.hardware.biometrics.fingerprint@2.1-service.xiaomi_sm6150.rc"],
    srcs: [
        "service.cpp",
        "BiometricsFingerprint.cpp",
    ],
    shared_libs: [
        "libbase",
        "libhardware",
        "libhidlbase",
        "liblog",
        "libutils",
        "libcutils",
        "android.hardware.biometrics.fingerprint@2.1",
    ],
    proprietary: true,
}
